!Install fonts-hack and the powerline fonts (from the repo) before using this config
!URxvt.font: xft:Hack:pixelsize=16
!Transparency requires the Compton compositor
URxvt.font: xft:Hack\ Nerd\ Font\ Mono:pixelsize=16
URxvt.scrollBar: false
URxvt.perl-ext.common: default,matcher,url-select,resize-font,selection-to clipboard
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-minus:     resize-font:smaller
URxvt.keysym.Control-plus:      resize-font:bigger
URxvt.keysym.Control-equal:     resize-font:reset
URxvt.keysym.Control-question:  resize-font:show
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.depth: 32
!URxvt.background: #151515

! special
*.foreground:   #dedede
*.background:   #151515
*.cursorColor:  #dedede

! black
*.color0:       #2e3436
*.color8:       #555753

! red
*.color1:       #cc0000
*.color9:       #ef2929

! green
*.color2:       #4e9a06
*.color10:      #8ae234

! yellow
*.color3:       #c4a000
*.color11:      #fce94f

